<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.myapp.guiapp.GuiApplicationController">

    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25"/>
            </padding>
            <Button fx:id="button" alignment="center" onAction="#launchWindow" text="Start receiving"/>
        </HBox>
    </bottom>
    <right>
        <ImageView fx:id="currentFrame" BorderPane.alignment="CENTER"/>
    </right>
    <left>
        <ImageView fx:id="linesFrame" BorderPane.alignment="CENTER"/>
    </left>

</BorderPane>